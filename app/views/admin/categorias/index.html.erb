<h2> Administração de Categorias </h2>

<%= will_paginate @records %>

<div class ="well">
   <%= link_to 'Novo Produto', new_admin_categoria_path, :class => 'btn btn-primary' %>
</div>
<table class = "table table-bordered table">
  <%= render_head Categoria,:nome %>
  
  <tbody>
  	<% @records.each do |record| %>
  	  <tr>
  	  	<td><%= record.nome %> </td>
  	  	
        <td>
          <%= link_to 'Editar', edit_admin_categoria_path(record), :class => 'btn btn-primary' %>
          <%= link_to 'Remove', admin_categoria_path(record), :method => :delete, :data => {:confirm => 'Tem Certeza'}, :class => 'btn btn-danger' %>
        </td>
  	  </tr>
  	  <%end%>
  </tbody>
</table>
<%= will_paginate @records %>  